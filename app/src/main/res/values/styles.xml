<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settingText" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:drawableRight">@drawable/list_go</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Line">
        <item name="android:background">#b8b8b8</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layerType">software</item>
    </style>

    <style name="Line.Full">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Line.wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15dp</item>

    </style>

</resources>
